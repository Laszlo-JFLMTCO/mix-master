<%= form_for @artist, :html => {:class => "form-horizontal"} do |f| %>
  <div class = "form-group">
    <%= f.label "Name:", :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :name, :html => {:class => "form-control"} %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label "Link to image:", :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :image_path, :html => {:class => "form-control"} %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.submit "Add Artist", :class => "btn btn-default" %>
  </div>

<% end %>
