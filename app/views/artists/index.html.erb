  <h1>Artists</h1>

  <%= link_to "Add Artist", new_artist_path, class: "btn btn-default" %>

  <table class = "table">
    <tr>
      <th>Name</th>
      <th>Path to image</th>
      <th class = "text-center" colspan = "2">Action</th>
    </tr>
    <% @artists.each do |artist|%>
      <tr>
        <td><%= link_to artist.name, artist_path(artist.name) %></td>
        <td><%= artist.image_path %></td>
        <td class = "text-center"><%= link_to "Edit", edit_artist_path(artist.name), class: "btn btn-warning" %></td>
        <td class = "text-center"><%= link_to "Delete", artist_path(artist.name), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end  %>
  </table>